{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [],
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "justMyCode": false, // Set this to false to allow debugging of all code
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "logToFile": true, // Enables logging to a file for debugging
            "debugOptions": [
                "RedirectOutput"
            ] // Redirects the output to the VS Code Debug Console
        }
    ]
}